{
  "name": "frontend/adapter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "frontend/adapter",
  "projectType": "library",
  "tags": [
    "scope:shared",
    "type:infra"
  ],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/frontend/adapter",
        "main": "frontend/adapter/index.ts",
        "tsConfig": "frontend/adapter/tsconfig.lib.json",
        "assets": [
          "frontend/adapter/*.md"
        ],
        "format": [
          "cjs"
        ],
        "generatePackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "frontend/adapter/jest.config.ts"
      }
    }
  }
}
